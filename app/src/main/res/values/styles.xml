<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.withoutAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="BaseText">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BaseText.Format" parent="BaseText">
        <item name="android:background">@color/colorTransparent</item>
    </style>
    <style name="BaseText.Format.Disabled" parent="BaseText.Format">
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="BaseText.Format.NoPadding" parent="BaseText.Format">
        <item name="android:padding">@dimen/dp0</item>
    </style>

    <style name="BaseText.Format.NoPadding.Size30" parent="BaseText.Format.NoPadding">
        <item name="android:textSize">@dimen/sp30</item>
    </style>

    <style name="BaseText.NoPadding" parent="BaseText">
        <item name="android:padding">@dimen/dp0</item>
    </style>

    <style name="BaseText.NoPadding.CenterButton" parent="BaseText.NoPadding">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textSize">@dimen/sp50</item>
    </style>

    <style name="BaseText.NoPadding.CenterButton.En" parent="BaseText.NoPadding.CenterButton">
        <item name="android:textSize">@dimen/sp24</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseText.NoPadding.CenterButton.En.Disabled" parent="BaseText.NoPadding.CenterButton.En">
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Disabled" >
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="EnabledView">
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CenterDot">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ZonePicture">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
        <!--<item name="android:visibility">gone</item>-->
    <style name="ZonePicture.ScaleX" parent="ZonePicture">
        <item name="android:scaleX">-1</item>
    </style>

</resources>
