<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_panel_item_height"
    android:background="@drawable/background_selector_transparent_blue"
    tools:background="@color/colorPrimary"
    >

    <com.zealens.face.view.FontTextView
        android:id="@+id/score"
        style="@style/BaseText.Format.NoPadding.Size30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0 : 0"
        android:textStyle="bold"
        />

    <com.zealens.face.view.FontTextView
        android:id="@+id/part"
        style="@style/BaseText.Format.NoPadding.Size30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp32"
        android:textStyle="bold"
        tools:text="第一分"
        />

    <com.zealens.face.view.FontTextView
        android:id="@+id/lasting_time"
        style="@style/BaseText.Format.NoPadding.Size30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp32"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        tools:text="(1'23'')"
        />

    <View
        android:layout_width="match_parent"
        android:background="@color/colorVideoPanelDivider"
        android:layout_height="@dimen/dp1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp34"
        />
</RelativeLayout>